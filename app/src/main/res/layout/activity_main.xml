<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/practicum" />

        <Button
            android:id="@+id/btnAddToPlayList"
            android:layout_width="143dp"
            android:layout_height="55dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="496dp"
            android:layout_marginEnd="50dp"
            android:text="Add To PlayList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnExitApp"
            android:layout_width="227dp"
            android:layout_height="49dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="50dp"
            android:text="Exit App"
            android:textColorLink="#E4E3E3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#EDEBEB" />

        <Button
            android:id="@+id/btnViewPlayList"
            android:layout_width="143dp"
            android:layout_height="55dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="496dp"
            android:layout_marginEnd="50dp"
            android:text="View PlayList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMainManuTitle"
            android:layout_width="286dp"
            android:layout_height="31dp"
            android:layout_marginTop="60dp"
            android:text="            Creat Your PlayList"
            android:textColor="#E61111"
            android:textColorHighlight="#D31212"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtSongTitle"
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Song TiTile"
            android:inputType="text"
            android:textColor="#F2EEEE"
            android:textColorHint="#FDFDFD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMainManuTitle" />

        <EditText
            android:id="@+id/edtArtistName"
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Artist Name"
            android:inputType="text"
            android:textColor="#EFE7E7"
            android:textColorHint="#DCD7D7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtSongTitle" />

        <EditText
            android:id="@+id/edtRating"
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Rating (1-5)"
            android:inputType="text"
            android:textColor="#EDE2E2"
            android:textColorHint="#DBD6D6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtArtistName" />

        <EditText
            android:id="@+id/edtComments"
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Comments"
            android:inputType="text"
            android:textColor="#EBDFDF"
            android:textColorHint="#FDFAFA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtRating" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>